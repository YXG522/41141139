Polynomial(const Polynomial& a) {
    head = new Node;
    head->link = head;

    Node* last = head;
    Node* p = a.head->link;
    while (p != a.head) {
        Node* newNode = new Node;
        newNode->coef = p->coef;
        newNode->exp = p->exp;
        last->link = newNode;
        last = newNode;
        p = p->link;
    }
    last->link = head;
}
